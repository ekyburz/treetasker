<%= simple_form_for(@profile, local: true) do |f| %>
  <%= f.error_notification %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :reminders, as: :boolean %>
  <%= f.input :archive, as: :boolean %>
  <%= f.button :submit %>
<% end %>

<%= link_to 'Back', profile_path, class:"btn btn-primary"%>
