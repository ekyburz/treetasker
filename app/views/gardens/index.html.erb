<div class="container">
  <div class="row w-100 justify-content-between">
    <div class="col-9">
      <h2><%= @user.first_name.pluralize %> Garden!</h2>
      <h4>Gardener Status: <strong><%= @user.status.capitalize %></strong></h4>
    </div>
    <div class="col-3 pt-2 pe-0">
      <%= link_to "Home", root_path, class: "btn btn-success float-end" %>
    </div>
  </div>

  <div class="middle-container w-100 mt-5">
    <div class="row gx-5">
      <div class="col">
        <div class="p-3 bg-white border">
          <h2>Statistics</h2>
          <p>You have planted a total of <strong><%= @garden.trees.count %></strong> trees!</p>
        </div>
      </div>
      <div class="col">
        <div class="p-3 bg-white border">
          <h2>Filter by:</h2>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="canvas-container w-100 mt-5" data-tree-count="<%= @current_user.garden.trees.count %>">
  <div class="col">
    <canvas id="myCanvas" class="border p-3 w-100"></canvas>
  </div>
</div>
