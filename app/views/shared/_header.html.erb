<div class="container-fluid header sticky-top mb-4">
    <header class="d-flex flex-wrap align-items-center justify-content-center px-3 py-2">
      <div class="col-9 d-flex align-items-center">
        <a href="/" class="link-body-emphasis text-decoration-none">
          <%= image_tag "treetasker-logo-nobg.png", alt: "TreeTasker - Productivity Growth", size: "100x100" %>
        </a>
        <h1>TreeTasker</h1>
      </div>

      <div class="col-3 text-end">
        <% if !user_signed_in? %>
          <%= link_to "Login", new_user_session_path(), class: "btn btn-outline-success me-2" %>
        <% else %>
          <p class="greeting me-3">Hello, <%= current_user.first_name %>!</p>
          <%= link_to "Logout", destroy_user_session_path(), data: { turbo_method: :delete }, class: "btn btn-outline-success" %>
        <% end %>
      </div>
    </header>
  </div>
