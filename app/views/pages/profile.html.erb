<div class="container bg-light rounded-4">
  <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
    <h2><strong>My Profile Page</strong></h2>
    <a href="/" class="btn btn-success">Home</a>
  </div>

  <div class="user-profile mt-3 mb-4 d-flex align-items-start">
    <!-- Profile Picture -->
    <div class="profile-picture me-3">
      <% if @user.photo.key? %>
        <%= cl_image_tag @user.photo.key, class: "avatar" %>
      <% else %>
        <i class="fa-regular fa-user fa-4x"></i>
      <% end %>
      <i class="fa-solid fa-camera" data-bs-toggle="modal" data-bs-target="#changeProfilePictureModal"></i>
    </div>

    <!-- User Details -->
    <div class="user-details">
      <div>
        <%= @user.first_name %> <%= @user.last_name %>
        <a href="/users/edit" class="icon-link text-dark ms-2 text-decoration-none">
          <i class="fa-regular fa-pen-to-square"></i>
        </a>
      </div>
      <div class="user-status">Gardener Status: <strong><%= @user.status.capitalize %></strong></div>
    </div>
  </div>



<%# Handling Image Update with a modal %>
<div>
  <!-- Modal -->
  <div class="modal fade" id="changeProfilePictureModal" tabindex="-1" role="dialog" aria-labelledby="changeProfilePictureModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="changeProfilePictureModal">Change Profile Picture</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
            <%# <span aria-hidden="true">&times;</span> %>
          </button>
        </div>
        <div class="modal-body">
          <%= simple_form_for(current_user, url: user_registration_path, html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :photo, as: :file %>
              <%= f.label :current_password, "Current Password" %>
              <%= f.password_field :current_password, class: 'form-control' %>
            </div>

            <div class="form-actions btn btn-success">
              <%= f.button :submit, "Update" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<div>
<button type="button" class="green btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#changeRemindersModal">
  Reminders
</button>

<div class="modal fade" id="changeRemindersModal" tabindex="-1" role="dialog" aria-labelledby="changeRemindersModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="changeRemindersModalLabel">Change Reminder</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        </button>
      </div>
      <div class="modal-body">
        <%= form_for(current_user, url: user_registration_path, html: { method: :put }) do |f| %>
      <div class="form-group">
          <div class="form-group">
            <%= f.label :reminders, "Reminders" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "new-reminder", class: 'form-control' %>
          </div>
          <%= f.submit "Update", class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>

<div>
<button type="button" class="green btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#changeArchiveModal">
  Archive
</button>
</div>

</div>
</div>

