<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1 class="me-3"><strong>Archive</strong></h1>
  <%= link_to "Home", root_path, class: "btn btn-success text-decoration-none" %>
</div>

<div class="container bg-light rounded-4">
  <% @tasks_by_priority.each do |priority, tasks| %>
    <h2><%= Task::PRIORITIES[priority] %></h2>
    <div class="row">
      <% tasks.each do |task| %>
        <div class="col-12 mb-3">
          <div class="card rounded-4">
            <div class="card-body">
              <%= render partial: "tasks/task", locals: { task: task } %>
              <p class="mt-2 mb-0">
                <%= link_to "Details", task, class: "btn btn-success text-decoration-none" %>
                <%= link_to 'Hide this task', task, method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
