<div class="card-header card-header-priority rounded-top-4">
  <div class="card-header-info">
    <% if task.completed %>
      <p>Status: Done</p>
    <% else %>
      <p>Status: Open â€“ Due on <%= task.deadline.strftime('%a, %b %e, %Y at %H:%M') %></p>
    <% end %>
  </div>
  <div class="card-header-action">
    <p>
      <%= link_to '<i class="fa-regular fa-eye"></i> Details'.html_safe, task, class: "tt-link edit" %> <span style="font-style: normal;">|</span>
      <%= link_to '<i class="fa-regular fa-trash-can"></i> Delete'.html_safe, task, method: :delete, data: {turbo_method: :delete, turbo_confirm: "Do you really want to delete this task?"}, class: "tt-link delete" %>
    </p>
  </div>
</div>
