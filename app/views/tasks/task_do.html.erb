<div class="container bg-light rounded-4 py-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Filter: <span class="text-success"><strong>Do</strong></span> Tasks</h1>
    <div>
      <%= link_to 'Remove', tasks_path %>
      <%= link_to 'Home', root_path, class: 'btn btn-success me-2' %>
    </div>
  </div>
  <div class="row bg-light rounded-4">
    <% @tasks.each do |task| %>
      <%= render partial: 'tasks/task', locals: { task: task, show_details_button: true } %>
    <% end %>
  </div>
</div>
