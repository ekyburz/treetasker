<div class="container bg-light rounded-4 py-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><span class="text-dark"><strong>Depository</strong></span> Tasks</h1>
    <%= link_to 'Home', root_path, class: 'btn btn-success' %>
  </div>
  <div class="row bg-light rounded-4">
    <% @tasks.each do |task| %>
      <div class="col-12 mb-3">
        <div class="card rounded-4">
          <div class="card-body">
            <h3><%= task.name %></h3>
            <%= link_to 'Details', task, class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'All Tasks', tasks_path, class: 'btn btn-info mt-3' %>
</div>
