<div class="card-header rounded-top-4">
  <div class="card-header-info">
    <% if task.completed %>
      <p>Status: Done</p>
    <% else %>
      <p>Status: Open â€“ Due on <%= task.deadline.strftime('%a, %b %e, %Y at %H:%M') %></p>
    <% end %>
  </div>
  <div class="card-header-action">
    <% if task.priority == 1 %>
      <p>DO</p>
    <% elsif task.priority == 2 %>
      <p>DECIDE</p>
    <% elsif task.priority == 3 %>
      <p>DELEGATE</p>
    <% elsif task.priority == 4 %>
      <p>DEPOSITORY</p>
    <% end %>
  </div>

</div>
