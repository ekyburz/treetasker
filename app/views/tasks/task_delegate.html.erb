<p style="color: green"><%= notice %></p>

<div>
  <div class="d-flex justify-content-between align-items-center mb-3 mt-2 mx-1">
    <h2 class="m-0">Filter: <span class="text-danger"><strong>Delegate</strong></span> Tasks</h2>
    <div>
      <%= link_to 'Remove Filter', tasks_path, class: "tt-link me-2" %>
      <%= link_to 'Home', root_path, class: 'btn btn-success' %>
    </div>
  </div>

  <div>
    <% @tasks.each do |task| %>
      <div class="col mb-3">
        <div class="card-body">
          <%= render partial: 'tasks/task_priority', locals: { task: task } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
