<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-end my-3 pe-3">
  <%= link_to "Tasks", tasks_path, class: "btn btn-outline-success me-2" %>
  <%= link_to "Home", root_path, class: "btn btn-success" %>
</div>

<div class="container d-flex">
  <div class="col me-3">
    <%= render @task %>
  <%# button_to "Destroy this task", @task, method: :delete, class: "btn btn-warning ms-3" %>
  </div>

  <div class="canvas-container col show-page rounded-4"
    <% if @task.priority == 1 %>
      data-tree-count-do="1"
    <% elsif @task.priority == 2 %>
    data-tree-count-decide="1"
    <% elsif @task.priority == 3 %>
    data-tree-count-delegate="1"
    <% elsif @task.priority == 4 %>
    data-tree-count-depository="1">
    <% end %>
      <div class="col">
        <canvas id="myCanvas" class="border rounded-4 p-3" style="height: 70vh; width: 30vh;"></canvas>
      </div>
  </div>
</div>
